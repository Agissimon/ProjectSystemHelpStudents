<Window x:Class="ProjectSystemHelpStudents.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystemHelpStudents"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Icon="/Resources/Icon/logo001.png" Style="{StaticResource mainWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0">
            <Image Source="/Resources/Icon/logo2.png" Height="40"/>
        </StackPanel>

        <Frame x:Name="frmStackPanelButton" NavigationUIVisibility="Hidden" Grid.Row="1" Width="200" HorizontalAlignment="Left"/>
        <Frame x:Name="frmAuth" NavigationUIVisibility="Hidden" Grid.Row="1"/>
        <Frame x:Name="frmContentAdmin" NavigationUIVisibility="Hidden" Grid.Row="1" Margin="200,0,0,0"/>
        <Frame x:Name="frmContentUser" NavigationUIVisibility="Hidden" Grid.Row="1" Margin="200,0,0,0"/>
        <Frame x:Name="frmReg" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
