<Page x:Class="ProjectSystemHelpStudents.UsersContent.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UserPage">

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Редактирование данных пользователя" FontSize="28" Foreground="White" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Имя:" Style="{StaticResource textBlockTransparentStyle}"/>
                <TextBox x:Name="UserNameTextBox" Style="{StaticResource textBoxTransparentStyle}"/>

                <TextBlock Text="Фамилия:" Style="{StaticResource textBlockTransparentStyle}"/>
                <TextBox x:Name="UserSurnameTextBox" Style="{StaticResource textBoxTransparentStyle}"/>

                <TextBlock Text="Отчество:" Style="{StaticResource textBlockTransparentStyle}"/>
                <TextBox x:Name="UserPatronymicTextBox" Style="{StaticResource textBoxTransparentStyle}"/>

                <TextBlock Text="Email:" Style="{StaticResource textBlockTransparentStyle}"/>
                <TextBox x:Name="UserEmailTextBox" Style="{StaticResource textBoxTransparentStyle}"/>

                <Button Content="Сохранить" Style="{StaticResource btnTransparentStyle}" Click="SaveButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
