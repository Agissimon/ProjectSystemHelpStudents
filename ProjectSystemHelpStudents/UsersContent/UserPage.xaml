<Page x:Class="ProjectSystemHelpStudents.UsersContent.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="UserPage">

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Редактирование данных пользователя" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Имя пользователя:" FontSize="16" Margin="0,0,0,5"/>
                <TextBox x:Name="UserNameTextBox" FontSize="16" Margin="0,0,0,10" Text="{Binding NameUser, Mode=TwoWay}"/>

                <Button Content="Сохранить" FontSize="16" Click="SaveButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
