<Window x:Class="ProjectSystemHelpStudents.UsersContent.FogotPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSystemHelpStudents.UsersContent"
        mc:Ignorable="d"
       Title="Забыл пароль" Height="180" Width="230" Icon="/Resources/Icon/logo001.png" Style="{StaticResource SmallWindowStyle}">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите e-mail:" Style="{StaticResource NormalTextBlockStyle}"/>
            <TextBox x:Name="txbForPass" Style="{StaticResource NormalTextBoxStyle}"/>
            <Button x:Name="btnMail" Content="Выслать пароль" Style="{StaticResource NormalButtonStyle}" Click="btnMail_Click"/>
        </StackPanel>
    </Grid>
</Window>
