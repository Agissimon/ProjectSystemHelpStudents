<Window x:Class="ProjectSystemHelpStudents.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод данных" Height="200" Width="400" Style="{StaticResource window}" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,10,0"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Width="75" Margin="10" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="75" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
