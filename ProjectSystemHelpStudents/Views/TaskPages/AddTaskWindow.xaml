<Window x:Class="ProjectSystemHelpStudents.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить задачу"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Icon/logo001.png"
        Style="{StaticResource SmallWindowStyle}"
        Loaded="Window_Loaded">

    <Border Margin="10" Padding="10" Background="#1E1E1E" CornerRadius="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" >

            <TextBlock Text="Название" Style="{StaticResource NormalTextBlockStyle}"/>
            <TextBox x:Name="txtTitle"
                     Style="{StaticResource InputFieldStyle}"
                     Margin="0,0,0,5"/>

            <TextBlock Text="Описание" Style="{StaticResource NormalTextBlockStyle}"/>
            <TextBox x:Name="txtDescription"
                     Style="{StaticResource InputFieldStyle}"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>

            <WrapPanel HorizontalAlignment="Left" Margin="0,10,0,0" Orientation="Horizontal" Width="Auto" >

                <TextBlock Text="Срок" Style="{StaticResource NormalTextBlockStyle}"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📅" FontSize="16" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpEndDate" Width="120" Margin="5,0,0,0"/>
                </StackPanel>

                <TextBlock Text="Приоритет" Style="{StaticResource NormalTextBlockStyle}"/>
                <ComboBox x:Name="cmbPriority" Width="140" Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Высокий приоритет"/>
                    <ComboBoxItem Content="Средний приоритет"/>
                    <ComboBoxItem Content="Низкий приоритет"/>
                </ComboBox>

                <TextBlock Style="{StaticResource NormalTextBlockStyle}" Text="Метки:" Margin="0,10,0,0"/>
                <ListBox x:Name="lstTags"
                                 SelectionMode="Multiple"
                         Style="{StaticResource TransparentListBoxStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Foreground="White"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </WrapPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Отмена" Style="{StaticResource ChipButtonStyle}" Margin="0,0,5,0" Click="Cancel_Click"/>
                <Button Content="Добавить задачу" Style="{StaticResource PrimaryButtonStyle}" Click="SaveTask_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
