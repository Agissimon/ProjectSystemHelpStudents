<UserControl x:Class="ProjectSystemHelpStudents.Views.AdminPages.UserEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectSystemHelpStudents.Views.AdminPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Margin="10">
        <TextBlock Text="Имя:" Style="{StaticResource TransparentTextBlockStyle}"/>
        <TextBox x:Name="NameBox" Margin="0,5" Style="{StaticResource InputFieldStyle}"/>
        <TextBlock Text="Фамилия:" Style="{StaticResource TransparentTextBlockStyle}"/>
        <TextBox x:Name="SurnameBox" Margin="0,5" Style="{StaticResource InputFieldStyle}"/>
        <TextBlock Text="Логин:" Style="{StaticResource TransparentTextBlockStyle}"/>
        <TextBox x:Name="LoginBox" Margin="0,5" Style="{StaticResource InputFieldStyle}"/>
        <TextBlock Text="Почта:" Style="{StaticResource TransparentTextBlockStyle}"/>
        <TextBox x:Name="EmailBox" Margin="0,5" Style="{StaticResource InputFieldStyle}"/>
        <CheckBox x:Name="IsAdminBox" Content="Администратор" Margin="0,5" Foreground="White"/>
        <Button Content="Сохранить" Click="Save_Click" Margin="0,10,0,0" Style="{StaticResource NormalButtonStyle}"/>
    </StackPanel>
</UserControl>
