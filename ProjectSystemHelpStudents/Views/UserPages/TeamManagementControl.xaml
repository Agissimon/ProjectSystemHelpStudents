<UserControl x:Class="ProjectSystemHelpStudents.Views.UserPages.TeamManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectSystemHelpStudents.ViewModels"
             Height="Auto" Width="Auto"
             Background="#444444">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">

            <Button Content="🆕 Новая команда" Click="NewTeam_Click"
                    Style="{StaticResource NormalButtonStyle}" Margin="0,0,0,10" HorizontalAlignment="Left"/>

            <ListView x:Name="TeamsListView"
          ItemsSource="{Binding Teams}"
                SelectionChanged="TeamsListView_SelectionChanged"
          Style="{StaticResource TransparentListViewStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="0,4" CornerRadius="6" Background="#2A2A2A">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"
                               Style="{StaticResource NormalTextBlockStyle}" />
                                <TextBlock Text="{Binding LeaderName}" FontStyle="Italic"
                               Style="{StaticResource SmallTextBlockStyle}" />

                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <Button Content="✎" ToolTip="Редактировать" Background="#444"
                                Click="EditTeam_Click"
                                Tag="{Binding}"
                                        Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0"/>
                                    <Button Content="➕" ToolTip="Пригласить" Background="#444"
                                Click="InviteMember_Click"
                                Tag="{Binding}"
                                Style="{StaticResource RoundedButtonStyle}" Margin="0,0,5,0"/>
                                    <Button Content="🗑" ToolTip="Удалить" Background="#444"
                                Click="DeleteTeam_Click"
                                Tag="{Binding}"
                                Style="{StaticResource RoundedButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackPanel>

        <GroupBox Header="Участники" Grid.Column="1"
                  Style="{StaticResource DarkGroupBoxStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MembersList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="0,4">
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"
                                           Style="{StaticResource NormalTextBlockStyle}" />

                                <Button Content="✕" Width="24" Height="24"
                                        Margin="8,0,0,0" DockPanel.Dock="Right"
                                        Click="RemoveMember_Click"
                                        Style="{StaticResource ButtonOptionsStyle}"
                                        DataContext="{Binding}" />
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
